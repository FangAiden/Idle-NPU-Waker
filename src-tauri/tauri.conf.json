{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Idle NPU Waker",
  "version": "1.1.0",
  "identifier": "com.idlenpu.waker",
  "build": {
    "beforeDevCommand": "python main.py",
    "beforeBuildCommand": "",
    "devUrl": "http://127.0.0.1:8000",
    "frontendDist": "../frontend"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Idle NPU Waker",
        "width": 1280,
        "height": 800,
        "minWidth": 960,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "visible": false,
        "url": "about:blank"
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": ["../app.ico"],
    "externalBin": ["bin/IdleNPUWaker"],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      }
    }
  }
}
