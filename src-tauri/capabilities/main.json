{
  "identifier": "main-ui",
  "description": "Allow main UI and tray to call required Tauri commands.",
  "windows": ["main", "tray-menu"],
  "permissions": [
    "core:default",
    "shell:default",
    "allow-update-tray-labels",
    "allow-show-main-window-cmd",
    "allow-hide-main-window",
    "allow-hide-tray-menu",
    "allow-exit-app"
  ],
  "remote": {
    "urls": ["http://127.0.0.1:*/*", "http://localhost:*/*"]
  }
}
